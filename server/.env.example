# Environment
NODE_ENV=development # Options: development, production, test

# Server Configuration
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://powr:your_password@localhost:5432/powr_db
TEST_DATABASE_URL=postgresql://powr_test:your_password@localhost:5432/powr_test

# Test Database Setup (only needed for initial setup)
POSTGRES_PASSWORD=your_postgres_password # Superuser password for creating test DB
TEST_DB_PASSWORD=your_test_db_password   # Password for test user

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id         # From Google Cloud Console
GOOGLE_CLIENT_SECRET=your_client_secret # From Google Cloud Console

# Session & Security
SESSION_SECRET=your_long_random_secret_here # At least 32 characters
COOKIE_DOMAIN=localhost                     # In production: your-domain.com

# CORS Configuration
CORS_ORIGIN=http://localhost:5173 # Frontend URL

# Application URLs
CLIENT_URL=http://localhost:5173  # Frontend application URL
SERVER_URL=http://localhost:4000  # Backend API URL

# Production Only (uncomment in production)
# NODE_ENV=production
# COOKIE_DOMAIN=your-domain.com
# DATABASE_URL=postgresql://user:pass@production-host:5432/db_name
# CLIENT_URL=https://your-domain.com
# SERVER_URL=https://api.your-domain.com
# CORS_ORIGIN=https://your-domain.com 